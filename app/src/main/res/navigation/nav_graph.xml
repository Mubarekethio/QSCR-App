<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissionFragment">

    <fragment
        android:id="@+id/audioFragment"
        android:name="com.mukee.amharic.qafaraf.voicecommand.qscra.fragments.AudioFragment"
        android:label="QSCR App"
        tools:layout="@layout/fragment_audio" >

        <action
            android:id="@+id/action_audioFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_audioFragment_to_connectFragment"
            app:destination="@id/connectFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_audioFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_audioFragment_to_permissionFragment"
            app:destination="@id/permissionFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true"/>

    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.mukee.amharic.qafaraf.voicecommand.qscra.fragments.SettingFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_connectFragment"
            app:destination="@id/connectFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_settingFragment_to_audioFragment"
            app:destination="@id/audioFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_settingFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/connectFragment"
        android:name="com.mukee.amharic.qafaraf.voicecommand.qscra.fragments.ConnectFragment"
        android:label="Connect"
        tools:layout="@layout/fragment_connect" >
        <action
            android:id="@+id/action_connectFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_connectFragment_to_audioFragment"
            app:destination="@id/audioFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_connectFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_connectFragment_to_permissionFragment"
            app:destination="@id/permissionFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.mukee.amharic.qafaraf.voicecommand.qscra.fragments.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_aboutFragment_to_audioFragment"
            app:destination="@id/audioFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_aboutFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_aboutFragment_to_connectFragment"
            app:destination="@id/connectFragment"
            app:popUpTo="@id/audioFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/permissionFragment"
        android:name="com.mukee.amharic.qafaraf.voicecommand.qscra.fragments.PermissionsFragment">
        <action
            android:id="@+id/action_permissionFragment_to_audioFragment"
            app:destination="@id/audioFragment"
            app:popUpTo="@id/permissionFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_permissionFragment_to_connectFragment"
            app:destination="@id/connectFragment" />
    </fragment>
</navigation>